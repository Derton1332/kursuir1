<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D5CE"
    android:id="@+id/root"
    tools:context=".Favorite">


    <Button
        android:id="@+id/secondsegment"
        android:layout_width="82dp"
        android:layout_height="79dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <TextView
        android:id="@+id/bill"
        android:layout_width="410dp"
        android:layout_height="54dp"
        android:background="#BABABA"
        android:ems="50"
        android:hint="Сумма(полностью)"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.531" />

    <TextView
        android:id="@+id/qty6"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginVertical="5dp"
        android:background="#BABABA"
        android:textColor="@color/black"
        android:alpha="1"
        android:hint="Количество"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <TextView
        android:id="@+id/qty4"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginVertical="5dp"
        android:background="#BABABA"
        android:textColor="@color/black"
        android:hint="Цена"
        android:textSize="19sp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <TextView
        android:id="@+id/qty"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginVertical="5dp"
        android:background="#BABABA"
        android:textColor="@color/black"
        android:hint="Сумма"
        android:textSize="19sp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <TextView
        android:id="@+id/buyerPrint"
        android:layout_width="415dp"
        android:layout_height="60dp"
        android:background="#BABABA"
        android:ems="50"
        android:hint="Отпустил(ФИО)"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.731" />

    <TextView
        android:id="@+id/sellerPrint"
        android:layout_width="415dp"
        android:layout_height="60dp"
        android:background="#BABABA"
        android:ems="50"
        android:hint="Получил(ФИО)"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/createPDF"
        android:layout_width="185dp"
        android:layout_height="71dp"
        android:background="#BABABA"
        android:gravity="center"

        android:text="Создать файл"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />

    <TextView
        android:id="@+id/qty1"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginVertical="5dp"
        android:alpha="1"
        android:hint="Ед. изм"
        android:textSize="19sp"
        android:background="#BABABA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <TextView
        android:id="@+id/item1spinner"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:background="#BABABA"
        android:entries="@array/Phones"
        android:gravity="center"
        android:textColor="@color/black"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/firstsegment"
        android:layout_width="82dp"
        android:layout_height="79dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />

    <TextView
        android:id="@+id/buyerName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:background="#BABABA"
        android:ems="50"
        android:hint="ФИО покупателя"
        android:alpha="1"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <TextView
        android:id="@+id/number"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:background="#BABABA"
        android:hint="№"
        android:alpha="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/sellerName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#BABABA"
        android:ems="50"
        android:alpha="1"
        android:hint="ФИО продавца"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintBottom_toTopOf="@+id/buyerName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883" />

    <TextView
        android:id="@+id/month"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:background="#BABABA"
        android:ems="10"
        android:alpha="1"
        android:hint="Месяц"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.697"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />

    <TextView
        android:id="@+id/year"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:background="#BABABA"
        android:ems="4"
        android:alpha="1"
        android:hint="Год"
        android:maxLength="4"

        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/from"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:background="#BABABA"
        android:ems="2"
        android:alpha="1"
        android:hint="День"
        android:maxLength="2"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />


</androidx.constraintlayout.widget.ConstraintLayout>